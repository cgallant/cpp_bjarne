#include <std_lib_facilities.h>

using namespace std;

int main() {
	vector<string> disliked_words;
	vector<string> words;
	cout << "Enter words (\"Exit\" to exit):";
	string temp =" ";

	while (string temp != "exit") {  //get word list
		words.push_back(temp);
	}

	for (unsigned int i = 0; i< words.size(); i++) {
		cout << words[i];
	}
	cout << endl;
	return 0;
}
